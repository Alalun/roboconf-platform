###################################
##          All in One           ##
##       with spaces in IDs      ##
###################################


###################################
## First, components...
###################################

# The VM
VM {
	alias: Virtual Machine;
	facets: VM;
}

# MySQL database
MySQL {
	alias: MySQL;
	facets: deployable;
	exports: ip, port = 3306;
	installer: puppet;
}

# Tomcat
Tomcat {
	alias: Tomcat;
	exports: ip, port = 8080;
	children: war;
	icon: tomcat.png;
	installer: puppet;
	facets: deployable;
}

# Apache Load Balancer
Apache {
	alias: Apache Load Balancer;
	imports: Tomcat.port, Tomcat.ip;
	exports: ip, port = 80;
	installer: puppet;
	facets: deployable;
}

# WAR applications
ecom {
	alias: an e-trade application;
	imports: MySQL.port, MySQL.ip;	# This application uses a database.
	facets: war archive;
}

hello world {
	alias: Hello World!;
	facets: war archive;
}


###################################
## Then, facets...
###################################

# The VM facet
facet VM {
	icon: vm.jpg;
	children: deployable;
	installer: iaas;
}

# The deployable facet
facet deployable {
	# nothing
}

# WAR  archives
facet war archive {
	icon: war.png;
	installer: bash;
	exports: full-url, url-path;
}
