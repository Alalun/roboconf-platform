###################################
##       All the components      ##
###################################


### Import the facet definitions
import real-lamp-facets.rcf;
### End of imports


# MySQL database
MySQL {
	alias: MySQL;
	facets: deployable;
	exports: ip, port = 3306;
	installer: puppet;
}

# Tomcat
Tomcat {
	alias: Tomcat;
	exports: ip, port = 8080;
	children: war;
	icon: tomcat.png;
	installer: puppet;
	facets: deployable;
}

# Apache Load Balancer
Apache {
	alias: Apache Load Balancer;
	imports: Tomcat.port, Tomcat.ip;
	exports: ip, port = 80;
	installer: puppet;
	facets: deployable;
}

# WAR applications
ecom {
	alias: an e-trade application;
	imports: MySQL.port, MySQL.ip;	# This application uses a database.
	facets: war-archive;
}

hello-world {
	alias: Hello World!;
	facets: war-archive;
}
