####################################
# We start with a simple deployment
####################################

# A VM with Apache only
instance of VM {
	name: Apache VM;
	
	instance of Apache {
		name: Apache;
	}
}

# A VM with MySQL only
instance of VM {
	name: MySQL VM;
	
	instance of MySQL {
		name: MySQL;
	}
}

# A VM with Tomcat only
instance of VM {
	name: Tomcat VM ;	# Keep the space at the end (nicer for display when count > 1)
	count: 3;	# Create 3 such VM
	
	instance of Tomcat {
		name: Tomcat;
		portAJP: 9021;
	}
}
