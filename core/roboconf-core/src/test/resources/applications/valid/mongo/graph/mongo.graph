###################################
##            Mongo              ##
###################################


# The VM
VM {
	alias: Virtual Machine;
	installer: target;
	children: Mongo;
}

# Mongo DB
Mongo {
	alias: Mongo DB;
	installer: puppet;
	exports: ip, port = 27017;
	imports: Mongo.ip (optional), Mongo.port	  (Optional);
}
