<?xml version="1.0" encoding="UTF-8"?>
<ipojo 
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="org.apache.felix.ipojo http://felix.apache.org/ipojo/schemas/CURRENT/core.xsd"
		xmlns="org.apache.felix.ipojo">

	<!-- A component for the DM -->
	<component classname="net.roboconf.dm.management.Manager" name="roboconf-dm" public="false">
		<requires aggregate="true" optional="true">
			<callback type="bind" method="targetAppears" />
			<callback type="unbind" method="targetDisappears" />
			<callback type="modified" method="targetWasModified" />
		</requires>
		<requires optional="true">
			<callback type="bind" method="bindTemplatingManager" />
			<callback type="unbind" method="unbindTemplatingManager" />
		</requires>
		
		<callback transition="validate" method="start" />
		<callback transition="invalidate" method="stop" />
		<provides />
		
		<properties updated="reconfigure" pid="net.roboconf.dm.configuration">
			<property name="messaging-type" method="setMessagingType" />
			<property name="configuration-directory-location" method="setConfigurationDirectoryLocation" />
		</properties>
	</component>
	
	<!-- And the instance... -->
	<instance component="roboconf-dm" name="Roboconf DM" />
</ipojo>
