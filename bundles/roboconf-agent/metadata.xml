<?xml version="1.0" encoding="UTF-8"?>
<ipojo 
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="org.apache.felix.ipojo http://felix.apache.org/ipojo/schemas/CURRENT/core.xsd"
		xmlns="org.apache.felix.ipojo">

	<!-- Default component -->
	<component classname="net.roboconf.agent.internal.Agent" name="roboconf-agent-default" public="false">
		<callback transition="validate" method="start"/>
		<callback transition="invalidate" method="stop"/>
		
		<requires field="plugins" optional="true">
			<callback type="bind" method="pluginAppears"/>
			<callback type="unbind" method="pluginDisappears"/>
			<callback type="modified" method="pluginWasModified"/>
		</requires>
		
		<properties updated="updateConfiguration" pid="net.roboconf.agent.configuration">
			<property name="message-server-ip" field="messageServerIp" />
			<property name="message-server-username" field="messageServerUsername" />
			<property name="message-server-password" field="messageServerPassword" />
			<property name="application-name" field="applicationName" />
			<property name="root-instance-name" field="rootInstanceName" />
			<property name="ip-address-of-the-agent" field="ipAddress" />
			<property name="iaas-type" field="iaasType" />
			<property name="override-properties-with-user-data" type="boolean" field="overrideProperties" value="true" />
			<property name="simulate-plugins" type="boolean" field="simulatePlugins" value="false" />
		</properties>
	</component>
	
	<!-- Since its component's factory is not public, it is a singleton instance. -->
	<instance component="roboconf-agent-default" name="Roboconf - Default Agent" />
	
	<!-- In-memory component -->
	<component classname="net.roboconf.agent.internal.Agent" name="roboconf-agent-in-memory">
		<callback transition="validate" method="start"/>
		<callback transition="invalidate" method="stop"/>
		
		<properties updated="updateConfiguration" pid="net.roboconf.agent-in-memory.configuration">
		
			<!-- Values that will be set by the IaaS in memory -->
			<property name="message-server-ip" field="messageServerIp" />
			<property name="message-server-username" field="messageServerUsername" />
			<property name="message-server-password" field="messageServerPassword" />
			<property name="application-name" field="applicationName" />
			<property name="root-instance-name" field="rootInstanceName" />
			
			<!-- Predefined Values -->
			<property name="ip-address-of-the-agent" field="ipAddress" value="localhost" />
			<property name="iaas-type" field="iaasType" value="in-memory" />
			<property name="override-properties-with-user-data" type="boolean" field="overrideProperties" value="false" />
			<property name="simulate-plugins" type="boolean" field="simulatePlugins" value="true" />
		</properties>
	</component>
</ipojo>
